<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation ="horizontal"
    tools:context="com.example.dronepet.ControlsFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <Button
            android:id="@+id/forwardBttn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/forward"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="103dp" />

        <Button
            android:id="@+id/backwardsBttn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginBottom="68dp"
            android:background="@drawable/backward"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="103dp" />

        <Button
            android:id="@+id/rotateLeftBttn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginBottom="136dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/rotateLeft"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/RotateRightBttn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/rotateRight"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="191dp" />

        <Button
            android:id="@+id/upBttn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/up"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="399dp" />

        <Button
            android:id="@+id/leftBttn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginBottom="136dp"
            android:background="@drawable/left"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="311dp" />

        <Button
            android:id="@+id/rightBttn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/right"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="109dp" />

        <Button
            android:id="@+id/downBttn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginBottom="72dp"
            android:background="@drawable/down"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="399dp" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
