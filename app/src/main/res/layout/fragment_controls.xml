<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dronepet.ControlsFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:background="@drawable/background2">

        <Button
            android:id="@+id/forwardBttn"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/forward"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/backwardsBttn"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/backward"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/rotateLeftBttn"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/rleft"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/RotateRightBttn"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/rright"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/upBttn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginEnd="120dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/up"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/leftBttn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginBottom="68dp"
            android:layout_marginEnd="196dp"
            android:background="@drawable/left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/rightBttn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginBottom="64dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/right"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.923" />

        <Button
            android:id="@+id/downBttn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="116dp"
            android:background="@drawable/down"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
